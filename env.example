# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_content,write_content,read_themes,write_themes
SHOPIFY_APP_URL=https://your-app-url.com

# Client-side Shopify API Key (needed for App Bridge)
VITE_SHOPIFY_API_KEY=your_shopify_api_key_here

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret
ENCRYPTION_SECRET=your_strong_32_byte_encryption_secret

# Database (Prisma + PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/contentaiboost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Image Processing
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp 